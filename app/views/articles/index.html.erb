<h1 class = "heading"> List of All Articles </h1>
	<% @articles.each do |a| %>
		<div class = "article">
			<h1> <%= link_to a.title, article_path(a) %> </h1>
			<p> <%= time_tag a.created_at%> <br> <%=time_ago_in_words(a.created_at)%> ago </p>
			<p class = "article_body"> <%= a.body%> </p>
		</div>

	<% end %>


<%= link_to "Create New Article", new_article_path, class: "tool btn btn-primary" %>



